<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_borrar_datos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumno.sienrajoaquin_hurtadojavier_pdm_p05.BorrarDatos">

    <TextView
        android:text="BORRADO DE DATOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="Borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/botonBorrarPrincipal" />

    <Button
        android:text="Atrás"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/botonBorrarPrincipal"
        android:layout_alignParentStart="true"
        android:id="@+id/botonAtrasBorrado" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/botonBorrarPrincipal">

        <TextView
            android:text="ID ORDENADOR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBorrarOrdenador"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextIDBorrar"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:hint="ID"
            android:textColor="@android:color/white"
            android:textColorHint="#60ff0000" />

        <TextView
            android:text="DNI ALUMNO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBorrarAlumno"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextDNIBorrar"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:hint="DNI"
            android:textColor="@android:color/white"
            android:textColorHint="#60ff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <TextView
            android:text="ESCRIBA UN ÚNICO CAMPO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="20sp"
            android:background="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
