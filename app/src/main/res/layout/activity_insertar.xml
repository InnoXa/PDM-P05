<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insertar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumno.sienrajoaquin_hurtadojavier_pdm_p05.Insertar"
    android:background="@android:color/black">

    <TextView
        android:text="INSERCIÃ“N ORDENADORES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <Button
        android:text="INSERTAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/boton_Insertar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_above="@+id/boton_Insertar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="ID:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_id"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:background="@color/accentColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_id"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:background="@android:color/background_light" />

            <TextView
                android:text="Sistema Operativo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_so"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/accentColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_so"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:text="AULA:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_aula"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:background="@color/accentColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_aula"
                android:background="@android:color/white"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <TextView
                android:text="ESTADO:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_estado"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/accentColor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText_estado"
                android:hint="Escriba la descripcion del estado del ordenador..."
                android:textStyle="normal|bold"
                android:background="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:text="ELIJA SU IMAGEN:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_imagen"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:background="@color/accentColor" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="120dp"
                android:horizontalSpacing="2dp"
                android:numColumns="auto_fit"
                android:padding="2dp"
                android:verticalSpacing="2dp"
                android:id="@+id/grid" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
